                android:id="@+id/moveleft"
                android:text="left"
                />
            <Button android:gravity="center"
                android:id="@+id/moveright"
                android:text="right"
                />
        <Button android:gravity="center"

            android:id="@+id/zero"
            android:text="0"

            />
        <Button android:gravity="center"

            android:id="@+id/dian"
            android:text="."

            />
        <Button android:gravity="center"

            android:id="@+id/dengyu"
            android:text="="

            />
        <Button android:gravity="center"

            android:id="@+id/jia"
            android:text="+"

            />
        </TableRow>
    </TableLayout>

</LinearLayout>

